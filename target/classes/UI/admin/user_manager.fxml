<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ucop.controller.admin.UserManagerController"
            prefWidth="1100" prefHeight="650">

    <!-- ============ HEADER ============ -->
    <top>
        <HBox style="-fx-background-color:#4a4e69; -fx-padding:16;" spacing="15">
            <Label text="Quản lý người dùng"
                   style="-fx-text-fill:white; -fx-font-size:22px; -fx-font-weight:bold;" />
        </HBox>
    </top>

    <!-- ============ TABLE ON LEFT ============ -->
    <center>
        <TableView fx:id="tblUsers">
            <columns>
                <TableColumn fx:id="colId"        text="ID"         prefWidth="60"/>
                <TableColumn fx:id="colUsername"  text="Username"   prefWidth="150"/>
                <TableColumn fx:id="colEmail"     text="Email"      prefWidth="200"/>
                <TableColumn fx:id="colRole"      text="Role"       prefWidth="120"/>
                <TableColumn fx:id="colActive"    text="Active"     prefWidth="70"/>

                <TableColumn fx:id="colFullName"  text="Full Name"  prefWidth="150"/>
                <TableColumn fx:id="colPhone"     text="Phone"      prefWidth="120"/>
                <TableColumn fx:id="colAddress"   text="Address"    prefWidth="200"/>
            </columns>
        </TableView>
    </center>

    <!-- ============ FORM PANEL ON RIGHT ============ -->
    <right>
        <VBox spacing="14" style="-fx-padding:20; -fx-background-color:#f3f3f3; -fx-border-color:#ccc; -fx-border-width:0 0 0 1;" prefWidth="350">

            <Label text="User Details"
                   style="-fx-font-size:18px; -fx-font-weight:bold; -fx-text-fill:#4a4e69;" />

            <!-- FORM BASIC -->
            <TextField fx:id="txtUsername" promptText="Username" />
            <TextField fx:id="txtEmail"    promptText="Email" />

            <ComboBox fx:id="cbRole" promptText="Select Role"/>
            <CheckBox fx:id="chkActive" text="Active" />

            <Separator/>

            <!-- PROFILE -->
            <TextField fx:id="txtFullName" promptText="Full Name"/>
            <TextField fx:id="txtPhone"    promptText="Phone"/>
            <TextField fx:id="txtAddress"  promptText="Address"/>

            <Separator/>

            <!-- BUTTONS -->
            <HBox spacing="10">
                <Button text="Add"
                        onAction="#handleAdd"
                        style="-fx-background-color:#4a4e69; -fx-text-fill:white; -fx-padding:6 20;"/>
                <Button text="Update"
                        onAction="#handleUpdate"
                        style="-fx-background-color:#9a8c98; -fx-text-fill:white; -fx-padding:6 20;"/>
                <Button text="Delete"
                        onAction="#handleDelete"
                        style="-fx-background-color:#e63946; -fx-text-fill:white; -fx-padding:6 20;"/>
            </HBox>

            <Label fx:id="lblMsg"
                   style="-fx-text-fill:red; -fx-font-size:14px; -fx-font-weight:bold;" />
        </VBox>
    </right>

</BorderPane>
