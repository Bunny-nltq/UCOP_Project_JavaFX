<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ucop.controller.staff.CategoryController">

    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Label text="Category Manager"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="75"/>
                </columnConstraints>

                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtDescription" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Parent Category:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbParent"
                          prefWidth="200"
                          GridPane.rowIndex="2"
                          GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Add" onAction="#add"/>
                <Button text="Update" onAction="#update"/>
                <Button text="Delete" onAction="#delete"/>
            </HBox>

        </VBox>
    </top>

    <center>
        <TableView fx:id="tbl">
            <columns>

                <TableColumn fx:id="colId"
                             text="ID"
                             prefWidth="60"/>

                <TableColumn fx:id="colName"
                             text="Name"
                             prefWidth="200"/>

                <TableColumn fx:id="colDescription"
                             text="Description"
                             prefWidth="300"/>

                <TableColumn fx:id="colParent"
                             text="Parent"
                             prefWidth="150"/>

                <TableColumn fx:id="colStatus"
                             text="Status"
                             prefWidth="80"/>

            </columns>
        </TableView>
    </center>

</BorderPane>
