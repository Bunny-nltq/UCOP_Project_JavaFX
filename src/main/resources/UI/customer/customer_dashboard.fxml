<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ucop.controller.customer.CustomerDashboardController"
            stylesheets="@../style/main.css"
            prefWidth="900" prefHeight="600">

    <top>
        <VBox>

            <!-- HEADER -->
            <HBox spacing="20" alignment="CENTER_LEFT" styleClass="header">
                <Label text="UCOP - CUSTOMER PORTAL"
                       style="-fx-font-size:20px; -fx-font-weight:bold;"/>

                <Pane HBox.hgrow="ALWAYS"/>

                <Label fx:id="lblUser" text="Hello, Customer!" 
                       style="-fx-font-size:16px;"/>
            </HBox>

            <!-- ======= UPDATED NAVIGATION BAR ======= -->
            <HBox spacing="10" styleClass="nav-bar" alignment="CENTER_LEFT">

                <Button text="Sản phẩm" styleClass="nav-btn"
                        onAction="#openItems"/>

                <Button text="Giỏ hàng" styleClass="nav-btn"
                        onAction="#openCart"/>

                <Button text="Đơn hàng của tôi" styleClass="nav-btn"
                        onAction="#openOrders"/>

                <Button text="Thông tin cá nhân" styleClass="nav-btn"
                        onAction="#openProfile"/>

                <Pane HBox.hgrow="ALWAYS"/>

                <Button text="Đăng xuất" styleClass="nav-btn-danger"
                        onAction="#logout"/>
            </HBox>

        </VBox>
    </top>

    <center>
        <StackPane fx:id="contentArea" style="-fx-padding:20;" />
    </center>

</BorderPane>
