<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ucop.controller.staff.StaffOrderController">

    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Label text="Order Manager"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
    <columnConstraints>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="75"/>
    </columnConstraints>

    <Label text="Order No:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="txtOrderNumber" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Account ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="txtAccountId" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Status:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <ComboBox fx:id="cbStatus" prefWidth="220"
              GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Subtotal:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="txtSubtotal" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Grand Total:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="txtGrandTotal" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Placed At:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="txtPlacedAt" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <!-- âœ… NEW: Discount Code -->
    <Label text="Discount Code:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="txtDiscountCode" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label text="Note:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <TextArea fx:id="txtNote"
              prefRowCount="2"
              wrapText="true"
              GridPane.rowIndex="7"
              GridPane.columnIndex="1"/>
</GridPane>


            <HBox spacing="10">
                <Button text="Load" onAction="#loadOrders"/>
                <Button text="Update Status" onAction="#updateStatus"/>
                <Button text="Cancel Order" onAction="#cancelOrder"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tblOrders">
            <columns>
    <TableColumn fx:id="colId" text="ID" prefWidth="70"/>
    <TableColumn fx:id="colOrderNumber" text="Order No" prefWidth="160"/>
    <TableColumn fx:id="colAccountId" text="Account" prefWidth="110"/>
    <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
    <TableColumn fx:id="colSubtotal" text="Subtotal" prefWidth="130"/>
    <TableColumn fx:id="colGrandTotal" text="Grand Total" prefWidth="140"/>
    <TableColumn fx:id="colDiscountCode" text="Discount Code" prefWidth="150"/>


    <TableColumn fx:id="colPlacedAt" text="Placed At" prefWidth="170"/>
</columns>

        </TableView>
    </center>

</BorderPane>
